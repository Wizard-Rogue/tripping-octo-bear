<% if session["devise.twitter_data"] %>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
		<%= devise_error_messages! %>
			<div class="inputs">
    			<%= f.input :email, :required => true, :autofocus => true %>
			  </div>
		
	<div class="actions">
		<%= f.button :submit, "Create Account" %>
  	</div>
	<% end %>

<% else %>

<h2>Sign up</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
		<%= devise_error_messages! %>

		<div class="inputs">
	<%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.input :is_organization, :as => :radio, :label => "Account Type", :collection => [["Volunteer", false], ["Organization", true]] %>
      <%= f.input :street, :input_html => {:class => "span5"} %>
      <%= f.input :city , :input_html => {:class => "span3"}%>
	<%= f.input :state, :label => "Region", :collection => regions, :include_blank => false %>
	<%= f.input :website1, :label => "Website" %>
	<%= f.input :contact_number, :label => "Mobile Number" %>
      <p class="pic"> <%= f.file_field :photo %></p>
  </div>
</br>
<div class="actions">
<%= f.button :submit, "Sign up" %>
  </div>
	<% end %>
<% end %>