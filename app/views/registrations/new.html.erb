<% if session["devise.twitter_data"] %>

	<h2>Apologies!</h2>
	<h3> Twitter does not provide us with an email address. Please be so kind as to provide yours below:</h3>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		
		<%= f.input :email, :required => true, :autofocus => true %>

		<div class="actions">
<%= f.button :submit, "Sign up" %>
  </div>
	<% end %>
	
<% else %>

	<h2>Sign up</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>

		<div class="inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.input :is_organization, :as => :radio, :label => "Account Type", :collection => [["Volunteer", false], ["Organization", true]] %>
  </div>

<div class="actions">
<%= f.button :submit, "Sign up" %>
  </div>
	<% end %>
<% end %>

<%= render "links" %>