<% content_for :header do %>
  <h1>Your events:</h1>
<% end %>
<div class="row">
	<div id="supported-events" class="span6">
		<p>
			<strong>Events you support:</strong>
			<% Event.all.each do |u| %>
				<% unless u.users.where(:id => current_user.id).first.nil? %>
					<li>
						<%= link_to u.name, event_path(u) %> headed by <%= link_to u.organization.name, profile_url(u.organization.id) %>
					</li>
				<% end %>
			<% end %>
		</p>
	</div>
</div>
<div class="row">
	<div id="created-events" class="span6">
		<p>
			<strong>Events you created:</strong>
			<% current_user.events.all.each do |u| %>
				<li>
					<%= link_to u.name, event_path(u) %>
					<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(u), :class => 'btn' if can? :update, u %>
  					<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(u),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' if can? :destroy, u %>
				</li>
			<% end %>
		</p>
	</div>
</div>