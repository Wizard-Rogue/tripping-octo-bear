<%= simple_form_for @event, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <%= f.input :name, :label => "Title" %>
  <%= f.input :description %>
  <%= f.input :address, :input_html => {:class => "span5"}%>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :country %>
  <%= f.input :latitude, :input_html => { :class => "span2" } %>
  <%= f.input :longitude, :input_html => { :class => "span2" } %>
  <%= f.input :supporters %>
  <%= f.input :start, :start_year => 2012, :input_html => { :class => "span1" }%>
  <%= f.input :end, :start_year => 2012, :input_html => { :class => "span1" } %>
  <%= f.file_field :photo %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary'%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
