<table>
  <tr>
    <th>Organization</th>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.user_id %></td>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.address %></td>
    <td><%= event.city %></td>
    <td><%= event.state %></td>
    <td><%= event.country %></td>
    <td><%= event.latitude %></td>
    <td><%= event.longitude %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) if can? :update, @event %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete if can? :destroy, @event %></td>
  </tr>
<% end %>
</table>

