<h1>Listing events</h1>

<table>
  <tr>
    <th>Organization</th>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.organization.name %></td>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.address %></td>
    <td><%= event.city %></td>
    <td><%= event.state %></td>
    <td><%= event.country %></td>
    <td><%= event.latitude %></td>
    <td><%= event.longitude %></td>
    <td><%= link_to 'Show', event %></td>
    <td>
    <% if event.users.where(:id => current_user.id).first.nil? %>
			<%= button_to "Volunteer! :)", event, confirm: 'Really join this?', method: :join %>
		<% else %>
			<%= button_to "Unvolunteer :(", remove_path(event), confirm: 'Do you really want to unvolunteer?' %>
		<% end %>
    </td>
    <td><%= link_to 'Edit', edit_event_path(event) if can? :update, event %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete if can? :destroy, event %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Event', new_event_path if can? :create, Event %>
